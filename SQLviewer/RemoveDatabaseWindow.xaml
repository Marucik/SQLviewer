<Window x:Class="SQLviewer.RemoveDatabaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQLviewer"
        mc:Ignorable="d"
        Title="RemoveDatabaseWindow" Height="350" Width="700" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="47*"/>
            <ColumnDefinition Width="53*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.ColumnSpan="2">
            <Rectangle Height="2" VerticalAlignment="Top"  Fill="#FFB6B6B6" />
            <DataGrid Name="ConnectionList" Margin="41,10,41,50" Grid.Row="1" IsReadOnly="True" HeadersVisibility="Column" ColumnWidth="auto" CanUserSortColumns="False" />
            <Button Content="Remove" HorizontalAlignment="Center"  VerticalAlignment="Bottom" Width="76" Click="Button_Click" Margin="0,0,0,12"/>
        </Grid>
    </Grid>
</Window>
